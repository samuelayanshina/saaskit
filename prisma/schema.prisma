generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String       @id @default(cuid())
  email           String       @unique
  name            String?
  slug            String
  members         TeamMember[] @relation("UserAsMember")
  teamMemberships TeamMember[] @relation("UserAsTeamMember")
  billing         Billing?     @relation("UserBilling")
  documents       Document[]
  teams           Team[]       @relation("UserTeams")

  // ðŸ‘‡ FIXED relation: explicitly declares opposite side name
  sentLetters Letter[] @relation("UserSentLetters")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Team {
  id        String       @id @default(cuid())
  name      String
  slug      String       @unique
  userId    String?
  user      User?        @relation("UserTeams", fields: [userId], references: [id]) // âœ… matches User.teams
  billing   Billing?     @relation("TeamBilling")
  members   TeamMember[] @relation("TeamHasMembers")
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model TeamMember {
  id        String   @id @default(cuid())
  role      String
  teamId    String
  memberId  String?
  userId    String?
  createdAt DateTime @default(now())

  // ðŸ‘‡ Relation to Team (matches "TeamHasMembers")
  team Team @relation("TeamHasMembers", fields: [teamId], references: [id])

  // ðŸ‘‡ Relation to User as a member
  userAsMember User? @relation("UserAsMember", fields: [memberId], references: [id], map: "TeamMember_memberId_fkey")

  // ðŸ‘‡ Relation to User as a team member (different key)
  userAsTeamMember User? @relation("UserAsTeamMember", fields: [userId], references: [id], map: "TeamMember_userId_fkey")
}

model Billing {
  id               String    @id @default(cuid())
  teamId           String?   @unique
  userId           String?   @unique
  plan             String    @default("free") // free | pro | enterprise
  status           String    @default("active") // active | trialing | cancelled
  currentPeriodEnd DateTime?
  customerId       String?
  subscriptionId   String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // ðŸ‘‡ Both opposite sides for one-to-one
  team Team? @relation("TeamBilling", fields: [teamId], references: [id])
  user User? @relation("UserBilling", fields: [userId], references: [id])
}

model Document {
  id          String    @id @default(cuid())
  title       String
  content     String?
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  createdById String
  createdBy   User      @relation(fields: [createdById], references: [id])
  status      String    @default("pending")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Letter {
  id    String @id @default(cuid())
  title String
  body  String

  // ðŸ‘‡ FIXED relation to match User.sentLetters
  senderId String
  sender   User   @relation("UserSentLetters", fields: [senderId], references: [id])

  status    String   @default("draft")
  createdAt DateTime @default(now())
}

model Category {
  id        String     @id @default(cuid())
  name      String     @unique
  icon      String?
  documents Document[]
}
